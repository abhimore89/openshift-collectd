Hostname    "<%=ENV['OPENSHIFT_GEAR_DNS']%>"

LoadPlugin logfile
TypesDB "<%=ENV['OPENSHIFT_COLLECTD_DIR']%>config/types.db"

<Plugin logfile>
  LogLevel debug
  File "<%=ENV['OPENSHIFT_COLLECTD_DIR']%>log/collectd.log"
  Timestamp true
  PrintSeverity false
</Plugin>

LoadPlugin exec

<Plugin exec>
  Exec "<%=ENV['USER']%>" "<%=ENV['OPENSHIFT_COLLECTD_DIR']%>/bin/scripts/cgroup_memory"
</Plugin>

LoadPlugin csv

<Plugin "csv">
  DataDir "<%=ENV['OPENSHIFT_COLLECTD_DIR']%>data"
  StoreRates true
</Plugin>
